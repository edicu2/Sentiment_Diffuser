<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aromind">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionDark">

        <activity android:name=".Activity.LoadingActivity" />

        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activity.CustomAddActivity"
            android:windowSoftInputMode="adjustNothing" />

        <activity
            android:name=".Activity.GradientAddActivity"
            android:launchMode="singleInstance"
            android:theme="@style/TransparentTheme" />

        <!--alarm popup KSW-->

        <activity
            android:name=".Activity.MenuAlarm_Activity.Setting_Alarm"
            android:launchMode="singleInstance"
            android:theme="@style/CustomTimePicker"/>

        <activity
            android:name=".Activity.MenuAlarm_Activity.Popup_alarmSound"
            android:launchMode="singleInstance"
            android:theme="@style/TransparentTheme" />

        <activity
            android:name=".Activity.MenuAlarm_Activity.Popup_alarmInterval"
            android:launchMode="singleInstance"
            android:theme="@style/TransparentTheme" />

        <activity
            android:name=".Activity.MenuAlarm_Activity.Popup_alarmName"
            android:launchMode="singleInstance"
            android:theme="@style/TransparentTheme"/>

        <service android:name="org.eclipse.paho.android.service.MqttService" />
        <receiver android:name=".Activity.MunuAlarm_AlarmManager.AlarmReceiver"/>
        <service android:name=".Activity.MunuAlarm_AlarmManager.AlarmService"/>


    </application>

</manifest>