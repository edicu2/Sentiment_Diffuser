<com.example.aromind.CustomView.FocusFixFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/FrameLayout"
    android:layout_width="125dp"
    android:layout_height="130dp"
    android:clipToPadding="false"
    android:layout_marginHorizontal="3dp">


    <View
        android:id="@+id/frame"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:background="@color/colorPrimary" />


    <com.example.aromind.CustomView.CustomGradientButton
        android:id="@+id/gradient"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:foregroundGravity="center|center"
        android:visibility="visible"
        app:circleColor="#00ff0000"
        app:circleLabel=" "
        app:labelColor="#00ff0000" />


    <TextView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_card_radius1" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </com.github.mikephil.charting.charts.PieChart>

    <TextView
        android:id="@+id/custom_title"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="bottom|center"
        android:text=" "
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/add_move"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:background="@color/colorPrimary"
        android:gravity="center|center_horizontal"
        android:text="+"
        android:textColor="#ffffff"
        android:textSize="30dp" />

    <ToggleButton
        android:id="@+id/focus"
        android:layout_width="125dp"
        android:layout_height="110dp"
        android:background="@drawable/custom_focus"
        android:checked="false"
        android:textOn=""
        android:textOff=""
        android:descendantFocusability="blocksDescendants"
        android:focusable="true" />

</com.example.aromind.CustomView.FocusFixFrameLayout>