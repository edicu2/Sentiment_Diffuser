<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/setting_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATE"
        android:textSize="23dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/calendar"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintBottom_toTopOf="@id/timePicker"/>

    <Button
        android:id="@+id/calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="button"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        app:layout_constraintStart_toEndOf="@id/setting_day"
        app:layout_constraintEnd_toEndOf="parent">
    </Button>

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/setting_day"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </TimePicker>

    <TextView
        android:id="@+id/sycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="반복"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="@id/setting_day"
        app:layout_constraintTop_toBottomOf="@id/timePicker"/>

    <ToggleButton
        android:id="@+id/sunDay"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="일"
        app:layout_constraintTop_toBottomOf="@id/sycle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/monDay"
        app:layout_constraintBottom_toTopOf="@+id/settingList"
        />

    <ToggleButton
        android:id="@+id/monDay"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="월"
        app:layout_constraintEnd_toStartOf="@id/tuesDay"
        app:layout_constraintStart_toEndOf="@id/sunDay"
        app:layout_constraintTop_toBottomOf="@id/sycle" />

    <ToggleButton
        android:id="@+id/tuesDay"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="화"
        app:layout_constraintTop_toBottomOf="@id/sycle"
        app:layout_constraintStart_toEndOf="@id/monDay"
        app:layout_constraintEnd_toStartOf="@id/wednesDay"/>

    <ToggleButton
        android:id="@+id/wednesDay"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="수"
        app:layout_constraintEnd_toStartOf="@id/thursDay"
        app:layout_constraintStart_toEndOf="@id/tuesDay"
        app:layout_constraintTop_toBottomOf="@id/sycle" />

    <ToggleButton
        android:id="@+id/thursDay"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="목"
        app:layout_constraintEnd_toStartOf="@id/friDay"
        app:layout_constraintStart_toEndOf="@id/wednesDay"
        app:layout_constraintTop_toBottomOf="@id/sycle" />

    <ToggleButton
        android:id="@+id/friDay"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="금"
        app:layout_constraintEnd_toStartOf="@id/saturDay"
        app:layout_constraintStart_toEndOf="@id/thursDay"
        app:layout_constraintTop_toBottomOf="@id/sycle" />

    <ToggleButton
        android:id="@+id/saturDay"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="토"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/friDay"
        app:layout_constraintTop_toBottomOf="@id/sycle" />

    <ListView
        android:id="@+id/settingList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sunDay"/>


</android.support.constraint.ConstraintLayout>