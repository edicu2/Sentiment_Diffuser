<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <view
        android:id="@+id/view"
        class="android.support.v4.view.ViewPager"
        android:layout_width="401dp"
        android:layout_height="358dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.142" />

    <Button
        android:id="@+id/customCardLeft"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/custom_card_left1"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <Button
        android:id="@+id/customCardRight"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/custom_card_right1"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.968"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <View
        android:id="@+id/view2"
        android:layout_width="110dp"
        android:layout_height="135dp"
        android:layout_marginEnd="7dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="0.156" />

    <com.example.aromind.CustomView.CustomGradientButton
        android:id="@+id/gradient_positive"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:foregroundGravity="center|center"
        android:visibility="visible"
        app:circleColor="#00ff0000"
        app:circleLabel=" "
        app:labelColor="#00ff0000"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/gradient_positive1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/custom_card_radius1"
        app:layout_constraintBottom_toBottomOf="@+id/gradient_positive"
        app:layout_constraintEnd_toEndOf="@+id/gradient_positive"
        app:layout_constraintStart_toStartOf="@+id/gradient_positive"
        app:layout_constraintTop_toTopOf="@+id/gradient_positive" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart_positive"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:layout_constraintVertical_bias="0.232">

    </com.github.mikephil.charting.charts.PieChart>

    <TextView
        android:id="@+id/custom_name_positive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_card_radius3"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:text=""
        android:textColor="#fff"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/gradient_positive1"
        app:layout_constraintEnd_toEndOf="@+id/gradient_positive1"
        app:layout_constraintStart_toStartOf="@+id/gradient_positive1"
        app:layout_constraintTop_toTopOf="@+id/gradient_positive1" />

    <View
        android:id="@+id/view3"
        android:layout_width="110dp"
        android:layout_height="135dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="0.156" />


    <com.example.aromind.CustomView.CustomGradientButton
        android:id="@+id/gradient_neutral"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:foregroundGravity="center|center"
        android:visibility="visible"
        app:circleColor="#00ff0000"
        app:circleLabel=" "
        app:labelColor="#00ff0000"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintVertical_bias="0.177" />

    <TextView
        android:id="@+id/gradient_neutral1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/custom_card_radius1"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintVertical_bias="0.276" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart_neutral"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintVertical_bias="0.232">

    </com.github.mikephil.charting.charts.PieChart>

    <TextView
        android:id="@+id/custom_name_neutral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_card_radius3"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:text=""
        android:textColor="#fff"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/gradient_neutral1"
        app:layout_constraintEnd_toEndOf="@+id/gradient_neutral1"
        app:layout_constraintStart_toStartOf="@+id/gradient_neutral1"
        app:layout_constraintTop_toTopOf="@+id/gradient_neutral1" />

    <View
        android:id="@+id/frame"
        android:layout_width="110dp"
        android:layout_height="135dp"
        android:layout_marginStart="8dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/view3"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="0.156" />


    <com.example.aromind.CustomView.CustomGradientButton
        android:id="@+id/gradient_negative"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:foregroundGravity="center|center"
        android:visibility="visible"
        app:circleColor="#00ff0000"
        app:circleLabel=" "
        app:labelColor="#00ff0000"
        app:layout_constraintBottom_toBottomOf="@+id/frame"
        app:layout_constraintEnd_toEndOf="@+id/frame"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/frame"
        app:layout_constraintTop_toTopOf="@+id/frame"
        app:layout_constraintVertical_bias="0.177" />

    <TextView
        android:id="@+id/gradient_negative1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/custom_card_radius1"
        app:layout_constraintBottom_toBottomOf="@+id/frame"
        app:layout_constraintEnd_toEndOf="@+id/frame"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/frame"
        app:layout_constraintTop_toTopOf="@+id/frame"
        app:layout_constraintVertical_bias="0.276" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart_negative"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/frame"
        app:layout_constraintEnd_toEndOf="@+id/frame"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/frame"
        app:layout_constraintTop_toTopOf="@+id/frame"
        app:layout_constraintVertical_bias="0.232">

    </com.github.mikephil.charting.charts.PieChart>

    <TextView
        android:id="@+id/custom_name_negative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_card_radius3"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:text=""
        android:textColor="#fff"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/gradient_negative1"
        app:layout_constraintEnd_toEndOf="@+id/gradient_negative1"
        app:layout_constraintStart_toStartOf="@+id/gradient_negative1"
        app:layout_constraintTop_toTopOf="@+id/gradient_negative1" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Positive"
        android:textColor="@color/positive"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Neutral"
        android:textColor="@color/neutral"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Negative"
        android:textColor="@color/negative"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/frame"
        app:layout_constraintEnd_toEndOf="@+id/frame"
        app:layout_constraintStart_toStartOf="@+id/frame"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/positive_add"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/sentiment_button_radius"
        android:text="Add"
        android:textColor="#fff"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.482" />

    <Button
        android:id="@+id/neutral_add"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/sentiment_button_radius"
        android:text="Add"
        android:textColor="#fff"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintVertical_bias="0.482" />

    <Button
        android:id="@+id/negative_add"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/sentiment_button_radius"
        android:text="Add"
        android:textColor="#fff"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/frame"
        app:layout_constraintEnd_toEndOf="@+id/frame"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="@+id/frame"
        app:layout_constraintTop_toTopOf="@+id/frame"
        app:layout_constraintVertical_bias="0.482" />


</android.support.constraint.ConstraintLayout>